[core]
	editor = emacsclient
	autocrlf = input
	ignorecase = false

[user]
	useconfigonly = true

[commit]
	gpgsign = true

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset %C(bold blue)<%an> -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
	pushall = "!for r in $(git remote); do git push $r $(git symbolic-ref --short HEAD); done && for r in $(git remote); do git push $r --tags; done"

[push]
	default = simple

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[gpg]
	program = gpg2

[diff]
	compactionHeuristic = true

[github]
	user = d12frosted

[magithub]
	online = true

[magithub "status"]
	includeStatusHeader = true
	includePullRequestsSection = false
	includeIssuesSection = false

[include]
	path = local.config
